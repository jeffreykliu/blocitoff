<% if @list.nil? %>
  <%= link_to "New To-do List", new_list_path, class: 'btn btn-success' %>
<% end %>

<div class="row">
  <div class="col-md-8">
    <div class="media">
      <div class="media-body">      
        <h1 class="media-heading">
          <%= @list.title %>
        </h1>
        </br>
        <%= link_to "Edit List Name", edit_list_path, class: 'btn btn-success' %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    </br>
    <h3 class="media-heading">Items</h3>   
      <%= render @items %>
    
    <%= render partial: 'items/form', locals: {list: @list} %>
  </div>
</div>